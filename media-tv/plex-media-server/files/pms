depend() {
	need localmount
	after net
	keyword -timeout
}

start() {
	ebegin "Starting plex-media-server"
	start-stop-daemon --start -b -x /usr/sbin/start_pms
	eend $?
}

stop() {
	ebegin "Stopping plex-media-server"
	killall -g start_pms
	eend $?
}
